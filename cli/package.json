{
  "name": "sfs-cli",
  "version": "1.0.0",
  "description": "Autonomous AI coding agent with enforced test verification - supports Claude Code and OpenCode",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "sfs": "./bin.js"
  },
  "files": [
    "dist",
    "bin.js",
    "README.md"
  ],
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "bun build src/index.ts --compile --minify --target=bun-darwin-arm64 --outfile dist/sfs-darwin-arm64",
    "build:darwin-arm64": "bun build src/index.ts --compile --minify --target=bun-darwin-arm64 --outfile dist/sfs-darwin-arm64",
    "build:darwin-x64": "bun build src/index.ts --compile --minify --target=bun-darwin-x64 --outfile dist/sfs-darwin-x64",
    "build:linux-x64": "bun build src/index.ts --compile --minify --target=bun-linux-x64 --outfile dist/sfs-linux-x64",
    "build:linux-arm64": "bun build src/index.ts --compile --minify --target=bun-linux-arm64 --outfile dist/sfs-linux-arm64",
    "build:windows-x64": "bun build src/index.ts --compile --minify --target=bun-windows-x64 --outfile dist/sfs-windows-x64.exe",
    "build:all": "bun run build:darwin-arm64 && bun run build:darwin-x64 && bun run build:linux-x64 && bun run build:linux-arm64 && bun run build:windows-x64",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "bun run build:all"
  },
  "keywords": [
    "ai",
    "coding",
    "automation",
    "claude",
    "opencode",
    "testing",
    "tdd",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dominicnunez/ralph"
  },
  "dependencies": {
    "commander": "^13.0.0",
    "picocolors": "^1.1.0"
  },
  "devDependencies": {
    "@types/bun": "^1.1.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18"
  }
}
